{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "Task",
      "Skill",
      "mcp__emacs-tools__claude-code-ide-mcp-imenu-list-symbols",
      "mcp__emacs-tools__claude-code-ide-mcp-xref-find-references",
      "mcp__ide__getDiagnostics"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_FILE_PATHS\" | grep -qE '\\.zig$'; then cd /Users/shota.508/Documents/MyProducts/zwasm && zig build test 2>&1 | tail -20; fi",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
